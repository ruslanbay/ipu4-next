+
+struct as3638_platform_data {
+	int gpio_torch;
+	int gpio_strobe;
+	int gpio_reset;
+	u32 flash_max_brightness[AS3638_LED_MAX];
+	u32 torch_max_brightness[AS3638_LED_MAX];
+};
